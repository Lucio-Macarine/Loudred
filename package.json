{
  "name": "loudred-bot",
  "version": "1.0.0",
  "description": "A discord sound player",
  "main": "index.js",
  "scripts": {
    "build": "tsc; lessc window/index.less window/index.css",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "author": "Lucius Macarini",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^22.0.0"
  },
  "dependencies": {
    "@discordjs/voice": "^0.14.0",
    "discord.js": "^14.7.1",
    "sodium": "^3.0.2"
  },
  "build": {
    "appId": "com.loudred.bot",
    "productName": "Loudred Bot",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "pacman",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "synopsis": "A discord sound player",
      "category": "Audio"
    },
    "pacman": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    },
    "deb": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    },
    "rpm": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    }
  }
}
